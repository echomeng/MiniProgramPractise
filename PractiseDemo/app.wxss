/**app.wxss**/
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 200rpx 0;
} 
.page-body {
  background-color: green;
  align-items: flex-start;
  padding: 20rpx;
  height: 100%;
}
.page-section {
  padding: 30rpx 30rpx;
  background-color: yellow;
  margin-top: 20rpx;
}
.page-section-title {
  font-size: 34rpx;
  color: #888888;
}
.page-section-body {
  display: flex;
  align-items: center;
}

.demo-text-1 {
  background-color: #FFC0CB;
  color: black;
  font-size: 34rpx;
  align-items: center;
  justify-content: center;
  position: relative;
}
.demo-text-1:before {
  content: 'A';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
