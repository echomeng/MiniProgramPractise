/* pages/cover-view/cover-view.wxss */
.flex-item {
  width: 200rpx;
  height: 300rpx;
  opacity: 0.7;
}
.flex-wrap {
  display: flex;
}
.cover-view {
  position: absolute;
  top: calc(50% - 150rpx);
  left: calc(50% - 300rpx);
}
.box {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  background-color: red;
}